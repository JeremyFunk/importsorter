{
	"name": "importsorter",
	"displayName": "ImportSorter",
	"description": "",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:importsorter.sortImports"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "importsorter.sortImports",
				"title": "Sort Imports"
			}
		],
		"configuration": {
			"title": "Import Sorter",
			"properties": {
				"importSorter.configurationFile": {
					"type": "string",
					"description": "The configuration file for Import Sorter",
					"default": ""
				},
				"importSorter.defaultSortingOptions": {
					"type": "object",
					"description": "The configuration file for Import Sorter",
					"properties": {
						"rules": {
							"type": "array",
							"description": "A list of all defined rules",
							"items": {
								"type": "object",
								"description": "Rule Item",
								"properties": {
									"originMatches": {
										"type": "array",
										"description": "Origin Matches",
										"title": "An array of the rules for the import origin."
									},
									"ruleType": {
										"type": "string",
										"enum": ["RegEx", "StartsWith", "EndsWith", "Includes", "Equals"]
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"publisher": "JeremyFunk",
	"repository": {"url": "https://github.com/JeremyFunk/importsorter"}
}
